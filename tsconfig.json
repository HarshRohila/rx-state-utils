{
  "compilerOptions": {
    "target": "es6", // Target ECMAScript version
    "module": "NodeNext", // Module system to use
    "declaration": true, // Generate type definitions
    "outDir": "dist", // Output directory for compiled files
    "rootDir": "src", // Root directory of input files
    "strict": false, // Enable strict type checking
		"moduleResolution": "nodenext",
		"incremental": true,
		"skipLibCheck": true,
    "esModuleInterop": true // Support for importing CommonJS modules
  },
  "include": ["src/**/*"] // Include all TypeScript files in the src directory
}